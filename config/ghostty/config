macos-titlebar-style = tabs
font-family = IntoneMono Nerd Font
font-size = 20
window-inherit-font-size = true

keybind = ctrl+a>c=new_tab
keybind = ctrl+a>v=new_split:right
keybind = ctrl+a>s=new_split:down

keybind = ctrl+h=goto_split:left
keybind = ctrl+j=goto_split:bottom
keybind = ctrl+k=goto_split:top
keybind = ctrl+l=goto_split:right

keybind = ctrl+a>h=resize_split:left,50
keybind = ctrl+a>j=resize_split:down,50
keybind = ctrl+a>k=resize_split:up,50
keybind = ctrl+a>l=resize_split:right,50

keybind = ctrl+a>n=next_tab
keybind = ctrl+a>p=previous_tab

keybind = ctrl+a>physical:1=goto_tab:1
keybind = ctrl+a>physical:2=goto_tab:2
keybind = ctrl+a>physical:3=goto_tab:3
keybind = ctrl+a>physical:4=goto_tab:4
keybind = ctrl+a>physical:5=goto_tab:5

keybind = ctrl+a>z=toggle_split_zoom
keybind = ctrl+a>r=reload_config
