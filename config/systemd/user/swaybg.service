[Unit]
Description=Sway Background Service
PartOf=hyprland-session.target

[Service]
Type=simple
ExecStart=/usr/bin/swaybg --image %h/.config/dotfiles/current/background --mode fill
ExecStop=/bin/kill -2 $MAINPID
Restart=on-failure
RestartSec=1
TimeoutStopSec=10

[Install]
WantedBy=hyprland-session.target
