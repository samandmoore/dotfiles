[Unit]
Description=Wayland Clipboard Persistence
Documentation=https://github.com/Linus789/wl-clip-persist
PartOf=hyprland-session.target

[Service]
Type=simple
ExecStart=/usr/bin/wl-clip-persist --clipboard regular --all-mime-type-regex '^(?!x-kde-passwordManagerHint).+'
ExecStop=/bin/kill -2 $MAINPID
Restart=on-failure
RestartSec=1
TimeoutStopSec=10

[Install]
WantedBy=hyprland-session.target
