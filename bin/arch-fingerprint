#!/usr/bin/env bash
set -euo pipefail

DOTFILES=~/.dotfiles

function show_help() {
  echo "Robot arch fingerprint commands"
  echo ""
  echo -e "\e[32mUsage:\e[0m robot arch fingerprint SUBCOMMAND [OPTIONS]"
  echo ""
  echo -e "\e[32mSubcommands:\e[0m"
  echo -e "\e[34msetup\e[0m          Set up fingerprint authentication"
  echo -e "\e[34mremove\e[0m         Remove fingerprint authentication"
}

if [ $# -eq 0 ]; then
  show_help
  exit 1
fi

SUBCOMMAND="$1"
shift

case "$SUBCOMMAND" in
setup)
  $DOTFILES/bin/arch-fingerprint-setup "$@"
  ;;
remove)
  $DOTFILES/bin/arch-fingerprint-remove "$@"
  ;;
*)
  echo -e "\e[31mError:\e[0m Unknown subcommand: $SUBCOMMAND"
  echo ""
  show_help
  exit 1
  ;;
esac