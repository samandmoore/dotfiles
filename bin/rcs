#!/usr/bin/env bash
set -euo pipefail

OS=$(uname -s | tr '[:upper:]' '[:lower:]')

function update_rc_files() {
  rcup -fv \
    -x README.md \
    -x LICENSE \
    -x etc \
    -x script \
    -S config/nvim \
    -t "$OS"
}

function list_rc_files() {
  lsrc -v \
    -x README.md \
    -x LICENSE \
    -x etc \
    -x script \
    -S config/nvim \
    -t "$OS"
}

case "${1:-}" in
list)
  list_rc_files
  exit 0
  ;;
up)
  echo "Linking dotfiles..."
  update_rc_files
  exit 0
  ;;
*)
  echo "Manage dotfiles"
  echo ""
  echo -e "\e[32mUsage:\e[0m $(basename "$0") COMMAND"
  echo ""
  echo -e "\e[32mCommands:\e[0m"
  echo -e "\e[34mlist\e[0m          List dotfiles"
  echo -e "\e[34mup\e[0m            Update dotfiles"
  exit 1
  ;;
esac
