#!/usr/bin/env bash

THEMES_DIR="$HOME/.dotfiles/etc/themes/"

find "$THEMES_DIR" -mindepth 1 -maxdepth 1 \( -type d -o -type l \) | sort | while read -r path; do
  filename=$(basename "$path")
  display_name=$(echo "$filename" | sed -E 's/(^|-)([a-z])/\1\u\2/g; s/-/ /g')
  echo "$display_name"
done
