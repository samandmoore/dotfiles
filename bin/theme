#!/usr/bin/env bash
set -euo pipefail

DOTFILES=~/.dotfiles

function list_themes() {
  echo "üñåÔ∏è Current theme:"
  basename "$(readlink "$DOTFILES/etc/current/theme")"
  echo ""
  echo "üé® Available themes:"
  ls -1 "$DOTFILES/etc/themes"
}

function change_theme() {
  local theme="$1"
  if [[ ! -d "$DOTFILES/etc/themes/$theme" ]]; then
    echo "Theme '$theme' does not exist."
    exit 1
  fi

  echo "Changing theme to '$theme'..."
  ln -snf "$DOTFILES/etc/themes/$theme" "$DOTFILES/etc/current/theme"

  # (re)set up theme link files since we don't want to commit these (to remain username agnostic)
  # could also use releative symlinks but that's a pain in the butt to maintain
  ln -snf "$DOTFILES/etc/current/theme/alacritty.toml" "$DOTFILES/config/alacritty/theme.toml"
  ln -snf "$DOTFILES/etc/current/theme/nvim.lua" "$DOTFILES/config/nvim/lua/plugins/colorscheme.lua"
  ln -snf "$DOTFILES/etc/current/theme/btop.theme" "$DOTFILES/config/btop/themes/current.theme"

  # reload kitty to get latest theme
  kitty @ load-config
}

case "${1:-}" in
--list)
  list_themes
  exit 0
  ;;
--change)
  change_theme "$2"
  exit 0
  ;;
*)
  echo "Manage themes"
  echo "Usage: $0 [--list | --change THEME]"
  exit 1
  ;;
esac

