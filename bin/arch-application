#!/usr/bin/env bash
set -euo pipefail

DOTFILES=~/.dotfiles

function show_help() {
  echo "Robot arch application commands"
  echo ""
  echo -e "\e[32mUsage:\e[0m robot arch application SUBCOMMAND [OPTIONS]"
  echo ""
  echo -e "\e[32mSubcommands:\e[0m"
  echo -e "\e[34msync\e[0m           Synchronize applications"
}

if [ $# -eq 0 ]; then
  show_help
  exit 1
fi

SUBCOMMAND="$1"
shift

case "$SUBCOMMAND" in
sync)
  $DOTFILES/bin/arch-application-sync "$@"
  ;;
*)
  echo -e "\e[31mError:\e[0m Unknown subcommand: $SUBCOMMAND"
  echo ""
  show_help
  exit 1
  ;;
esac