#!/usr/bin/env bash
set -euo pipefail

DOTFILES=~/.dotfiles

function show_help() {
  echo "Robot arch webapp commands"
  echo ""
  echo -e "\e[32mUsage:\e[0m robot arch webapp SUBCOMMAND [OPTIONS]"
  echo ""
  echo -e "\e[32mSubcommands:\e[0m"
  echo -e "\e[34minstall\e[0m        Install web applications"
  echo -e "\e[34mremove\e[0m         Remove web applications"
}

if [ $# -eq 0 ]; then
  show_help
  exit 1
fi

SUBCOMMAND="$1"
shift

case "$SUBCOMMAND" in
install)
  $DOTFILES/bin/arch-webapp-install "$@"
  ;;
remove)
  $DOTFILES/bin/arch-webapp-remove "$@"
  ;;
*)
  echo -e "\e[31mError:\e[0m Unknown subcommand: $SUBCOMMAND"
  echo ""
  show_help
  exit 1
  ;;
esac