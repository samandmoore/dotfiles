#!/usr/bin/env bash
set -euo pipefail

DOTFILES=~/.dotfiles

function show_help() {
  echo "Robot arch font commands"
  echo ""
  echo -e "\e[32mUsage:\e[0m robot arch font SUBCOMMAND [OPTIONS]"
  echo ""
  echo -e "\e[32mSubcommands:\e[0m"
  echo -e "\e[34mlist\e[0m           List available fonts"
  echo -e "\e[34mget\e[0m            Get font information"
}

if [ $# -eq 0 ]; then
  show_help
  exit 1
fi

SUBCOMMAND="$1"
shift

case "$SUBCOMMAND" in
list)
  $DOTFILES/bin/arch-font-list "$@"
  ;;
get)
  $DOTFILES/bin/arch-font-get "$@"
  ;;
--help|-h|help)
  show_help
  ;;
*)
  echo -e "\e[31mError:\e[0m Unknown subcommand: $SUBCOMMAND"
  echo ""
  show_help
  exit 1
  ;;
esac